<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoviCareAppDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_700</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black_700</item>
        <item name="snackbarStyle">@style/MySnackbar</item>

    </style>

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginBottom">40dp</item>
    </style>

    <style name="MyNavigationItem">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="titleTextColor">@color/white_50</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyOnboardingTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_700</item>
        <item name="android:windowBackground">@drawable/custom_onboarding_background</item>
    </style>

    <style name="Theme.AppCompat.MyOptionsTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:colorBackground">@color/black_600</item>
        <item name="background">@drawable/custom_toolbar_background</item>
    </style>
</resources>
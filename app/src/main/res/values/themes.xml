    <style name="Theme.CoviCareApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:layout_marginBottom">40dp</item>
